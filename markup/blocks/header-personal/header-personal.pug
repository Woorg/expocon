mixin header-personal(data)
  .header.header_secondary.header_personal
    .header__container.container
      .header__top.flex
        a.logo.logo_secondary.header__logo(href="#")
          picture.logo__image
            source(type='image/webp' media='(min-width:300px)' data-srcset='assets/images/general/logo@2x.webp 2x, assets/images/general/logo.webp 1x')
            source(type='image/png' media='(min-width:300px)' data-srcset='assets/images/general/logo@2x.png 2x, assets/images/general/logo.png 1x')

            img.lazy(data-src="assets/images/general/logo@2x.png", alt="logo Expocon")

        nav.header__nav.nav.nav_primary

          != pugHelpers.Icon.call(locals, {iconName: 'menu-icon', className: 'nav__button'})

          ul.nav__list.flex
            li.nav__item.nav__item_current
              a.nav__link(href="#") Главная
            li.nav__item
              a.nav__link(href="#") О выставке
            li.nav__item
              a.nav__link(href="#") Экспоненты
            li.nav__item
              a.nav__link(href="#") Контакты

        .header__phone
          a.phone(href="tel:+70000000") 8 000 000 00 00

        .header__h-user.h-user.h-user_personal.flex
          .h-user__list-w
            a.h-user__button(href="#button") Личный кабинет
            ul.h-user__list
              li.h-user__item
                a.h-user__link(href="#button") Стать участником
              li.h-user__item
                a.h-user__link(href="#button") Посетить выставку

          .h-user__avatar
            img(src="assets/images/content/about-image.jpg", alt="")
            button.h-user__preferences Настройки

              //- != pugHelpers.Icon.call(locals, {iconName: 'iconName', className: 'customClass', iconWidth: '25', iconHeight: '25'})

          .h-user__auth.h-user__auth_active.flex
            button.h-user__close
              span.h-user__close-text Закрыть
              != pugHelpers.Icon.call(locals, {iconName: 'close-icon', className: 'h-user__close-icon'})

            form.h-user__form.form.form_auth(action="", method="post")
              .form__field
                input.form__input(type="text", name="", value="", placeholder="Логин")
              .form__field
                input.form__input(type="text", name="", value="", placeholder="Пароль")

              a.form__forget(href="#forget")
                span Восстановить пароль

              .form__field
                .form__caption Пол

                .form__radio-w.flex
                  .form__field.form__field_radio
                    label.form__label.flex
                      input.form__radio(type="radio" name="gender" value="male" checked)
                      span.form__label-text Муж.

                  .form__field.form__field_radio
                    label.form__label.flex
                      input.form__radio(type="radio" name="gender" value="female" checked)
                      span.form__label-text Жен.




      .header__bottom.flex

        .header__search.search
          form.flex(action="", method="get")
            .search__field
              input.search__input(type="text", value="", placeholder="")
            input.search__submit(type="submit", value="Поиск")


