mixin header(data)
  header.header
    .header__container.container.flex
      a.logo.header__logo
        .logo__name Expocon
        img.logo__image.lazy(data-src="assets/images/general/logo@2x.png", alt="logo Expocon")

      nav.header__nav.nav
        ul.nav__list
          li.nav__item
            a.nav__link(href="#") Главная
          li.nav__item
            a.nav__link(href="#") О выставке
          li.nav__item
            a.nav__link(href="#") Экспоненты
          li.nav__item
            a.nav__link(href="#") Контакты

      a.header__phone.phone(href="tel:+70000000") 8 000 000 00 00

      .header__h-user.h-user
        a.h-user__button(href="#button") Войти на выставку
        ul.h-user__list
          li.h-user__item
            a.h-user__link(href="#button")
          li.h-user__item
            a.h-user__link(href="#button")
        .h-user__avatar



      .header__search.search
        form(action="", method="get")
          .search__field
            input.search__input(type="text", value="", placeholder="")
          input.search__submit(type="submit", value="Поиск")


