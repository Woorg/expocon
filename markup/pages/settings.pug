doctype html
html(class="no-js", lang="ru")

  include ../blocks/head/head.pug
  include ../blocks/header-secondary/header-secondary.pug
  include ../blocks/footer/footer.pug

  include ../blocks/settings/settings.pug
  include ../blocks/popup/popup.pug

  head
    +head(head.defaults)
  body.page.page_settings.lazy(data-bg='url(assets/images/general/bg-4.jpg)')
    +header-secondary()
    |%=symbols=%
    .page__inner
      main.page__main.main
        +settings()


    .page__bottom
      +footer-secondary()

      +popup()

    script(src='%=static=%js/separate-js/lazyload.min.js' defer)
    script(src='%=static=%js/separate-js/jquery.min.js' defer)

    script(src='%=static=%js/separate-js/jquery.magnific-popup.min.js' defer)
    script(src='%=static=%js/main%=hash=%%=min=%.js' defer)
