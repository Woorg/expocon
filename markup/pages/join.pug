  head
    +head(head.defaults)
  body.page.page_join.lazy(data-bg='url(assets/images/general/bg-3.jpg)')
    +header-secondary()
    |%=symbols=%
    .page__inner
      main.page__main.main
        .page__row.page__row_first
          .page__container.container.flex
            +exhibition-third().page__exhibition
            +join().page__join

        .page__row.page__row_second
          .page__container.container.flex
            img.join-image.lazy(data-srcset='assets/images/general/join-image@2x.png 2x, assets/images/general/join-image.png 1x' alt="")

            +register-third().page__register

        +participate()
        +why-secondary()
        +how()

    .page__bottom
      +footer-secondary()

    script(src='%=static=%js/separate-js/lazyload.min.js' defer)
    script(src='%=static=%js/separate-js/jquery.min.js' defer)
    script(src='%=static=%js/separate-js/slick.min.js' defer)
    script(src='%=static=%js/main%=hash=%%=min=%.js' defer)


